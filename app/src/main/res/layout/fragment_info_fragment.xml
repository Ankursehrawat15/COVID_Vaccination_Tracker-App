<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.Info_fragment">

   <ImageView
      android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:layout_width="match_parent"
       android:layout_height="270dp"
       android:src="@drawable/infosection"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="vertical"
      >

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         app:cardElevation="10dp"
          android:layout_margin="10dp"
         app:cardCornerRadius="14dp"
         >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:text="Vaccination Information"
               android:layout_marginTop="12dp"
                android:fontFamily="@font/medium"
                android:padding="4dp"
               android:layout_marginStart="12dp"
               android:textColor="@color/black"
               android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed  >"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="#3DB2FF"
                android:textSize="18sp"/>

         </LinearLayout>

         <ImageView
            android:layout_gravity="center|end"
             android:layout_width="40dp"
             android:layout_marginEnd="30dp"
             android:layout_height="50dp"
            android:src="@drawable/info"/>





      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:layout_margin="10dp"
          app:cardCornerRadius="14dp"
          >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaccination Availability"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/medium"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed  >"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="#3DB2FF"
                android:textSize="18sp"/>

         </LinearLayout>

         <ImageView
             android:layout_gravity="center|end"
             android:layout_width="40dp"
             android:layout_marginEnd="30dp"
             android:layout_height="50dp"
             android:src="@drawable/available"/>





      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:layout_margin="10dp"
          app:cardCornerRadius="14dp"
          >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/medium"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed  >"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="#3DB2FF"
                android:textSize="18sp"/>

         </LinearLayout>

         <ImageView
             android:layout_gravity="center|end"
             android:layout_width="50dp"
             android:layout_marginEnd="27dp"
             android:layout_height="60dp"
             android:src="@drawable/question"/>





      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:layout_margin="10dp"
          app:cardCornerRadius="14dp"
          >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Covid Precautions"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/medium"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed  >"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="#3DB2FF"
                android:textSize="18sp"/>

         </LinearLayout>

         <ImageView
             android:layout_gravity="center|end"
             android:layout_width="40dp"
             android:layout_marginEnd="27dp"
             android:layout_height="60dp"
             android:src="@drawable/precautions"/>





      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardElevation="10dp"
          android:layout_margin="10dp"
          app:cardCornerRadius="14dp"
          >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Cowin"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/medium"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed  >"
                android:padding="4dp"
                android:layout_marginStart="12dp"
                android:textColor="#3DB2FF"
                android:textSize="18sp"/>

         </LinearLayout>

         <ImageView
             android:layout_gravity="center|end"
             android:layout_width="40dp"
             android:layout_marginEnd="27dp"
             android:layout_height="60dp"
             android:src="@drawable/inject"/>





      </androidx.cardview.widget.CardView>


   </LinearLayout>



</LinearLayout>